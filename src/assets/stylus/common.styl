// 防止文本溢出
text-overflow(n)
    overflow hidden
    text-overflow ellipsis
    if n > 1
        display -webkit-box
        -webkit-line-clamp n
        -webkit-box-orient vertical
    else
        white-space nowrap
// 上下左右居中
both-center()
    display flex
    justify-content center
    align-items center
// page title
.common-desc
    width 100%
    height 50px
    line-height 50px
    margin 20px 0
    color #333
    font-size 20px
    text-align center
    font-weight 600

// admin warp
.admin-warp
    width 1000px
    height auto
    margin 0 auto

// search row
.search-row
    min-height 38px
    line-height 38px
    font-size 14px
    color #666

// 分类颜色
.type-success
    color #67c23a
.type-warning
    color #e6a23c
.type-info
    color #909399
.type-danger
    color #f56c6c
.type-primary
    color #409eff




// transition 动画
.fade-transform-leave-active,
.fade-transform-enter-active
    transition all .5s

.fade-transform-enter
    opacity 0
    transform translateX(-30px)

.fade-transform-leave-to
    opacity 0
    transform translateX(30px)